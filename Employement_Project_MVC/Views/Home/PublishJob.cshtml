@model IEnumerable<Employement_Project_MVC.Models.JobsViewModel>




@foreach (var item in Model)
{
    <div style="padding:10px;background-color:blueviolet;color:azure;margin-bottom:10px;text-align:center;"><h2>@item.JobTitle</h2></div>


    <table class="table table-bordered table-stripped table-hover" >
        <tr>
            <th>
                اسم المتقدم
            </th>
            <th>
                الرساله
            </th>
            <th>
            التاريخ
            </th>

            <th></th>
        </tr>

        @foreach (var subitem in item.Applies)
        {
            <tr>
               
                <td>
                    @Html.DisplayFor(modelItem => subitem.user.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => subitem.Message)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => subitem.AplayOn)
                </td>

                @*<td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>*@
            </tr>
        }

    </table>        

}