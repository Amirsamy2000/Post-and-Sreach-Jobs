@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole
<center>
    <div class="panel panel-body panel-info" style="width:50%;margin-top:60px">
        <center>
            <h4>Create New Role And Give It Privilage</h4>
            <img src="~/Uploads/Create.jpg" style="width:200px;height:200px;border-radius:50%"/>
        </center>
        <br />
        <br />
        <div class="col-sm-12" style="background-color: azure; padding: 20px; box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.3); ">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>New Role</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                           
                            <input type="submit" value="Create" class="btn btn-success" />|
                            <a href="/Admin/Admin" class="btn btn-info">Back !</a>
                        
                        </div>
                    </div>
                </div>
            }
        </div>

    </div>


</center>